  	<select id="channelInfo" resultMap="channelResultSet">
  		SELECT L.CH_NM, M.USER_ID, A.FILE_NM
		FROM LOGER L
		JOIN MEMBER M ON(L.USER_NO = M.USER_NO)
		JOIN ATTACHMENT A ON(L.USER_NO = A.USER_NO)
		WHERE A.AM_TY = '회원'
  	</select>
  	
  	<select id="info" resultType="hashMap">
		SELECT SUM(C.AMOUNT_PRICE), SUM(RE_COUNT), SUM(C_COUNT)
		FROM LOGER L
		JOIN CALCULATE C ON(L.CH_NO = C.CH_NO)
		JOIN REPORT R ON(L.USER_NO = R.RE_TARGET)
  	</select>
  	
<!-- resultType="hashMap" -->
</mapper>
